@page
@model TheEleganceShop.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: black;
        font-weight: 400;
        text-align: center;
        color: white;
    }
</style>

<h1>Details</h1>

<div>
    <h4>@Model.Product.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductStockQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductStockQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductshoeSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductshoeSize)
        </dd>


    </dl>
</div>

<!-- Form for my button to add to the cart -->
<form method="post" asp-page-handler="AddToCart" asp-route-id="@Model.Product.ProductID">
    <input type="hidden" asp-for="Product.ProductID" />


    <button type="submit" class="btn btn-primary">Add to Cart</button>
</form>

<div>

    @if (User.IsInRole("Employee"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Product.ProductID">Edit</a>

    }
    <a asp-page="./Index">Back to List</a>
</div>

